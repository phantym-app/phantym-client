{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

    "rewrites": [
      {
        "source": "/cast",
        "destination": "/cast.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],

    "cleanUrls": true,
    "trailingSlash": false,
    "appAssociation": "AUTO"
  },

  "emulators": {
    "functions": {
      "port": 5555
    },
    "hosting": {
      "port": 5550
    },
    "ui": {
      "enabled": true,
      "port": 5560
    }
  }
}
