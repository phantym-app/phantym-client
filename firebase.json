{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

    "rewrites": [
      {
        "source": "game/**",
        "dynamicLinks": true,
        "function": "game"
      }
    ],

    "cleanUrls": true,
    "trailingSlash": false,
    "appAssociation": "AUTO"
  },

  "emulators": {
    "functions": {
      "port": 5555
    },
    "hosting": {
      "port": 5550
    },
    "ui": {
      "enabled": true,
      "port": 5560
    }
  }
}
