{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/game",
        "function": "ssr"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5555
    },
    "hosting": {
      "port": 5550
    },
    "ui": {
      "enabled": true,
      "port": 5560
    }
  }
}
