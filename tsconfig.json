{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    // "jsxFactory": "h",
    "baseUrl": "./",
    /* paths - If you configure Snowpack import aliases, add them here. */
    "paths": {
      "react": ["preact/compat"],
      "react-dom": ["preact/compat"],
      "/web_modules/*.js": [
        "node_modules/@types/*",
        "node_modules/*",
        "web_modules/*.js"
      ]
    },
    "noEmit": true,
    /* Additional Options */
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  }
}
