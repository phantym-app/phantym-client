{
  "include": ["src", "dev/types"],
  "exclude": ["node_modules/*", "build/*", ".firebase/*"],

  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",

    "lib": ["ESNext", "DOM"],

    "baseUrl": "./",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@assets/*": ["public/assets/*"],
      "@store/*": ["src/store/*"],
      "@logic/*": ["src/logic/*"],
      "@components/*": ["src/components/*"]
    },

    "module": "esnext",
    "moduleResolution": "Node"

    // "target": "esnext",
  }
}
