{
  "include": ["src", "dev/types"],
  "exclude": ["node_modules/*", "build/*", ".firebase/*"],

  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",

    "lib": ["ESNext", "DOM"],

    "baseUrl": "./",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@routes": ["src/routes"],

      "@assets/*": ["public/assets/*"],
      "@assets": ["public/assets"],

      "@store/*": ["src/store/*"],
      "@store": ["src/store"],

      "@logic/*": ["src/logic/*"],
      "@logic": ["src/logic"],

      "@components/*": ["src/components/*"],
      "@components": ["src/components"]
    },

    "module": "esnext",
    "moduleResolution": "Node"

    // "target": "esnext",
  }
}
